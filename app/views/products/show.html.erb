<p>
  <%= @product.name %>
  <%= link_to "Editar", edit_product_path(@product) %>
  <%= link_to "Eliminar", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Estas seguro de eliminar"} %>
</p>

<% @product.categories.each do |category| %>
  <p><%= category.name %></p>
<% end %>

<section>
  <div>
    <%= form_with model:[@product, Vote.new] do |form| %>
      <%= form.submit "Votar", class:"btn btn-primary" %>
    <% end %>
  </div>
  <small>
    Votos: <%= @product.votes.count %>
  </small>
</section>

<section>
  <%= render partial: 'comments/comment', collection: @product.comments, as: :comment %>
</section>

<section>
  <%= render partial: 'comments/form' %>
</section>